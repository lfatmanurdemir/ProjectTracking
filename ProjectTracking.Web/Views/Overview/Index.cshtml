                                <div class="card-title">
                                    <h5 class="text-nowrap mb-2">En Çok Proje Tamamlayan</h5>
                                    <span class="badge bg-label-warning rounded-pill">@ViewBag.MostCompletedEmployeeInformation</span>
                                </div>
                                <div class="mt-sm-auto">
                                    <small class="text-success text-nowrap fw-semibold"><i class="bx bx-chevron-up"></i> 68.2%</small>
